{
  "name": "@j2blasco/ts-boundaries",
  "version": "0.0.1",
  "description": "A tool to generate ESLint boundaries configuration from TypeScript boundary definitions",
  "author": "j2blasco",
  "license": "MIT",
  "type": "module",
  "keywords": [
    "typescript",
    "eslint",
    "boundaries",
    "architecture",
    "code-organization"
  ],
  "publishConfig": {
    "access": "public"
  },
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "bin": {
    "ts-boundaries": "tsx ./src/utils/cli.ts"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "require": "./src/index.ts",
      "types": "./src/index.ts"
    }
  },
  "files": [
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "boundaries:generate": "tsx ./src/utils/cli.ts",
    "lint:fix": "npm run boundaries:generate && eslint src --ext .ts",
    "lint": "npm run boundaries:generate && eslint src --ext .ts",
    "script": "tsx --tsconfig ./scripts/tsconfig.json",
    "test": "jest"
  },
  "dependencies": {
    "tsx": "^4.20.3",
    "typescript": "~5.7.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^24.0.13",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "eslint": "^9.29.0",
    "eslint-import-resolver-typescript": "^4.4.3",
    "eslint-plugin-boundaries": "^5.0.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.2",
    "tsconfig-paths": "^4.2.0"
  }
}
